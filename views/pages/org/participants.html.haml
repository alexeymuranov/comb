%ol
  = filtering_form Participant,
                   [:last_name, :first_name, :invitation_needed, :visa_needed],
                   [[:participations, :approved]],
                   @filtering_values || {}

  - @participants.each do |participant|
    %li{ :id => "participant_#{ participant.id }" }
      - if participant.id == @form_participant_id
        = haml :'pages/org/_participant_form',
               :locals => { :participant => participant }
      - else
        = haml :'pages/org/_participant',
               :locals => { :participant => participant }
