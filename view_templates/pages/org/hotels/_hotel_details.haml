-# Parameters:
-#   hotel

- hotel ||= @hotel

%dl
  .item
    %dt.attribute<
      = label_from_attribute_name(Hotel, :name, :string)
    %dd.attribute.string<
      &= hotel.name

  .item
    %dt.attribute<
      = label_from_attribute_name(Hotel, :address, :string)
    %dd.attribute.string<
      - case address = hotel.address
      - when nil
        %samp<?
      - when ''
        %samp<âˆ…
      - when /\An\/a\z/i
        %samp<N/A
      - else
        %a{ :href => map_url_for_address(address) }<>
          = preserve do
            &= address

  .item
    %dt.attribute<
      = label_from_attribute_name(Hotel, :phone, :string)
    %dd.attribute.string<
      &= hotel.phone

  .item
    %dt.attribute<
      = label_from_attribute_name(Hotel, :web_site, :string)
    %dd.attribute.string<
      %a{ :href => hotel.web_site }<>
        &= hotel.web_site

- if main_organiser_logged_in?
  %a.button.edit{ :href => fixed_url_with_locale("/#{ ORG_PAGE_PREFIX }hotels/#{ hotel.id }/edit"),
                  :role => 'button' }
    = t 'actions.update'
  %a.button.delete{ :href => fixed_url_with_locale("/#{ ORG_PAGE_PREFIX }hotels/#{ hotel.id }/delete"),
                    :role => 'button' }
    = t 'actions.delete'
