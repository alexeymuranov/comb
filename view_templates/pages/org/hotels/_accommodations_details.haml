          = header_from_attribute_name(Accommodation, :arrival_date)
        %th
          = header_from_attribute_name(Accommodation, :departure_date)
    %tbody
      - accommodations = hotel.accommodations.default_order
      - if accommodations.empty?
        %tr
          %td{ :colspan => 3 }
