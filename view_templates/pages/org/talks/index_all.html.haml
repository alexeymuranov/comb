%table.index
  %thead
    %tr
      - [ :translated_type_name, :speaker_name, :title,
          :date, :time, :room_or_auditorium ].each do |attr_name|
        %th
          = header_from_attribute_name(Talk, attr_name)
      %th{ :colspan => main_organiser_logged_in? ? 2 : 1 }/

  %tbody
    - @talks.each do |talk|
      %tr{ :id => "talk_#{ talk.id }" }
        - [ :translated_type_name, :speaker_name, :title,
            :date, :time, :room_or_auditorium ].each do |attr_name|
          %td
            &= talk.public_send(attr_name)

        %td
          %a.button.show{ :href => fixed_url_with_locale("/org/talks/#{ talk.id }") }<
            = t 'actions.show'

        - if main_organiser_logged_in?
          %td
            %a.button.edit{ :href => fixed_url_with_locale("/org/talks/#{ talk.id }/edit") }<
              = t 'actions.update'

- if main_organiser_logged_in?
  %a.button.new{ :href => fixed_url_with_locale("/org/talks/new"),
                 :role => 'button' }<
    = t 'actions.add'
